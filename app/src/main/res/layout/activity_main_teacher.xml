<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/teacher_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/teacher_bottom_nav"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/teacher_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#EEEEEE"
        app:itemIconTint="@drawable/color_nav"
        app:itemTextColor="@drawable/color_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/nav_teacher" />

</androidx.constraintlayout.widget.ConstraintLayout>